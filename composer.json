{
    "type": "library",
    "name": "sqon/sqon",
    "replace": { "kherge/sqon": "*" },
    "description": "Reads and writes Sqons.",
    "keywords": ["PHP", "sqlite", "container"],
    "license": [
        "MIT",
        "Apache-2.0"
    ],
    "support": {
        "issues": "https://github.com/Sqon/sqon/issues",
        "source": "https://github.com/Sqon/sqon"
    },

    "authors": [
        {
            "name": "Kevin Herrera",
            "email": "kevin@herrera.io",
            "homepage": "http://kevin.herrera.io/",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-4": {
            "Sqon\\": "src/Sqon"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Test\\Sqon\\": "tests/Sqon"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },

    "require": {
        "php": ">=5.6",
        "ext-pdo_sqlite": "*",
        "kherge/file-manager": "^1.1"
    },

    "require-dev": {
        "ext-bz2": "*",
        "ext-zlib": "*"
    }
}
